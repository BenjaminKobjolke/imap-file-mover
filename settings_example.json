{
  "accounts": [
    {
      "name": "Work Email",
      "server": "imap.example.com",
      "username": "your.email@example.com",
      "password": "your_password",
      "port": 993,
      "use_ssl": true,
      "target_folder": "C:\\Users\\YourName\\Documents\\Invoices",
      "imap_move_folder": "Processed"
    },
    {
      "name": "Personal Email",
      "server": "imap.gmail.com",
      "username": "your.personal@gmail.com",
      "password": "your_app_password",
      "port": 993,
      "use_ssl": true,
      "target_folder": "C:\\Users\\YourName\\Documents\\Personal\\Invoices",
      "imap_move_folder": "Archived"
    }
    
  ],
  "filters": [
    {
      "sender": "@microsoft.com",
      "subject": "Invoice",
      "attachment_type": "attachment",
      "attachment_extension": "pdf",
      "target_format": "pdf"
    },
    {
      "sender": "billing@example.com",
      "subject": "Your Order",
      "attachment_extension": "pdf",
      "attachment_name": "invoice"
    },
    {
      "sender": "billing@example.com",
      "subject": "Monthly Statement",
      "attachment_type": "attachment",
      "attachment_extension": "pdf",
      "target_format": "pdf"
    },
    {
      "sender": "help@paddle.com",
      "subject": "Your Decodo invoice",
      "attachment_type": "url",
      "url_prefix": "https://my.paddle.com/receipt/",
      "target_format": "pdf"
    },
    {
      "sender": "help@paddle.com",
      "subject": "Your Decodo invoice", 
      "attachment_type": "body",
      "target_format": "md",
      "target_folder": "E:\\markdown"
    },
    {
      "account": "Personal Email",
      "subject": "privat",
      "attachment_type": "body",
      "target_format": "md",
      "target_folder": "E:\\Email"
    },
    {
      "account": "Personal Email",
      "subject": "meeting",
      "attachment_type": "body",
      "target_format": "md",
      "target_folder": "E:\\Notes",
      "markdown": {
        "properties": {
          "Author": "[email_from]",
          "Created at": "[email_datetime]",
          "Last updated at": "[email_datetime]",
          "Subject": "[email_subject]",
          "tags": ["meeting", "email"]
        }
      }
    }
  ],
  "check_interval_minutes": 15,
  "log_level": "INFO",
  "log_retention_days": 7,
  "wkhtmltopdf_path": null
}
